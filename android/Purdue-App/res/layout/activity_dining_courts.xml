<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <Button
        android:id="@+id/Earhart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/Earhart" 
        android:onClick="earhartInfo"
        style="?android:attr/borderlessButtonStyle" />
    <Button
        android:id="@+id/Ford"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/Ford"
        android:onClick="fordInfo"
        style="?android:attr/borderlessButtonStyle" />
    <Button
        android:id="@+id/Hillenbrand"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/Hillenbrand"
        android:onClick="hillenbrandInfo"
        style="?android:attr/borderlessButtonStyle" />
    <Button
        android:id="@+id/Windsor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/Windsor"
        android:onClick="windsorInfo"
        style="?android:attr/borderlessButtonStyle" />
    <Button
        android:id="@+id/Wiley"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/Wiley"
        android:onClick="wileyInfo"
        style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>
